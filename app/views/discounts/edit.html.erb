<h1>Edit Discount</h1>
<%= form_with url: merchant_discount_path(@merchant, @discount), method: :patch, local: true do |f| %>
  <%= f.label :percentage_discount, 'Percentage' %><br>
  <%= f.number_field :percentage_discount, value: @discount.percentage_discount, step: :any %><br>

  <%= f.label :quantity_threshold, 'Quantity Threshold' %><br>
  <%= f.number_field :quantity_threshold, value: @discount.quantity_threshold %><br>

  <%= f.submit 'Save' %>
<% end %>
