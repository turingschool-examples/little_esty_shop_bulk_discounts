<h1> Currently Existing Discounts </h1>

<h2><%= link_to "Create New Discount", "/merchant/#{@merchant.id}/bulk_discounts/new" %></h2>

<% @merchant.bulk_discounts.each do |discount| %>

  <h2>Bulk Discount ID: <%= link_to "#{discount.id}", "/merchant/#{@merchant.id}/bulk_discounts/#{discount.id}" %></h2>
  <h3>Discount Percent: <%= discount.percent %> </h3>
  <h3>Discount Threshold: <%= discount.threshold %> </h3>

  <%= button_to "Delete Bulk Discount #{discount.id}", "/merchant/#{@merchant.id}/bulk_discounts", method: :delete, params: {discount_id: discount.id}, action: "destroy"  %>
<% end %>
